<html>
<head>
    <% stylesheets %>
    <% javascripts %>
</head>
<body>
    <% query %>
    <div id="container">
        <div id="content">
            <% @content %>
        </div>
        <div id="dock-container">
            <div id="notice-container">
                <div id="notice" class="overflow"></div>
            </div>
            <div id="dock">
                <div class="button" title="<% $about %>"><a href="cmd:about"><% img "dock-about.png" %></a></div>
                <div class="button" title="<% $preferences %>"><a href="cmd:preferences"><% img "dock-preferences.png" %></a></div>
                <div class="button" title="<% $add_columns %>"><a href="cmd:add_column"><% img "dock-add.png" %></a></div>
                <div class="button" title="<% $accounts_manager %>"><a href="cmd:account_manager"><% img "dock-accounts.png" %></a></div>
                <div class="button" title="<% $follow %>"><a href="cmd:follow"><% img "dock-profile.png" %></a></div>
                <div class="button" title="<% $update_status %>"><a href="cmd:update_status"><% img "dock-update.png" %></a></div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</body>
</html>
